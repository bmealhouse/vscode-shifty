{
  "name": "shifty",
  "displayName": "shifty",
  "description": "Shifts your color theme & font family automatically",
  "version": "3.0.0-canary.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bmealhouse/vscode-shifty"
  },
  "bugs": {
    "url": "https://github.com/bmealhouse/vscode-shifty/issues"
  },
  "author": "Brent Mealhouse <bmealhouse@gmail.com>",
  "publisher": "bmealhouse",
  "engines": {
    "node": ">=14.0.0",
    "vscode": "^1.69.0"
  },
  "categories": [
    "Themes",
    "Other"
  ],
  "keywords": [
    "shift",
    "random",
    "theme",
    "font"
  ],
  "icon": "images/shifty-logo.png",
  "galleryBanner": {
    "color": "#193549",
    "theme": "dark"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "shifty",
      "properties": {
        "shifty.shiftMode": {
          "type": "string",
          "default": "default",
          "description": "Controls how shifty cycles through color themes & font families.",
          "enum": [
            "default",
            "discovery",
            "favorites"
          ],
          "enumDescriptions": [
            "Cycles through all color themes & font families that have not been ignored.",
            "Cycles through color themes & font families that have not been favorited or ignored.",
            "Cycles through favorite color themes & font families."
          ]
        },
        "shifty.colorThemes.colorThemeType": {
          "type": "string",
          "default": "auto-detect",
          "description": "Controls the type of color themes the shift between. When auto-detect is enabled, ensure window.autoDetectColorScheme and window.autoDetectHighContrast are also enabled.",
          "enum": [
            "auto-detect",
            "dark",
            "light",
            "high-contrast-dark",
            "high-contrast-light"
          ],
          "enumDescriptions": [
            "Automatically detects the color theme type based on the OS appearance.",
            "Only dark color themes.",
            "Only light color themes.",
            "Only high-contrast dark color themes.",
            "Only high-contrast light color themes."
          ]
        },
        "shifty.colorThemes.favoriteColorThemes": {
          "type": "array",
          "default": [],
          "description": "List color themes you've favorited."
        },
        "shifty.colorThemes.ignoreColorThemes": {
          "type": "array",
          "default": [],
          "description": "List of color themes you've ignored."
        },
        "shifty.fontFamilies.fallbackFontFamily": {
          "type": "string",
          "default": "monospace",
          "markdownDescription": "Controls which font family will be used as the fallback. Supports comma delimited values (e.g. `\"SF Mono\", monospace`)."
        },
        "shifty.fontFamilies.favoriteFontFamilies": {
          "type": "array",
          "default": [],
          "description": "List of font families you've favorited."
        },
        "shifty.fontFamilies.ignoreFontFamilies": {
          "type": "array",
          "default": [],
          "description": "List of font families you've ignored."
        },
        "shifty.fontFamilies.includeFontFamilies": {
          "type": "array",
          "default": [],
          "description": "List of font families to include. Useful for including fonts you've purchased."
        },
        "shifty.shiftInterval.automaticallyStartShiftInterval": {
          "type": "boolean",
          "default": true,
          "description": "Controls whether the shift interval will start automatically."
        },
        "shifty.shiftInterval.shiftColorThemeIntervalMin": {
          "type": [
            "integer",
            "null"
          ],
          "default": 30,
          "markdownDescription": "Number of minutes to wait before shifting the color theme. Use `0` or `null` to disable the color theme shift interval."
        },
        "shifty.shiftInterval.shiftFontFamilyIntervalMin": {
          "type": [
            "integer",
            "null"
          ],
          "default": 30,
          "markdownDescription": "Number of minutes to wait before shifting the font family. Use `0` or `null` to disable the font family shift interval."
        }
      }
    },
    "commands": [
      {
        "command": "shifty.shift",
        "title": "Shift",
        "category": "shifty"
      },
      {
        "command": "shifty.shiftColorTheme",
        "title": "Shift color theme",
        "category": "shifty"
      },
      {
        "command": "shifty.shiftFontFamily",
        "title": "Shift font family",
        "category": "shifty"
      },
      {
        "command": "shifty.favoriteColorTheme",
        "title": "Favorite color theme",
        "category": "shifty",
        "enablement": "!shifty.isFavoriteColorTheme"
      },
      {
        "command": "shifty.unfavoriteColorTheme",
        "title": "Unfavorite color theme",
        "category": "shifty",
        "enablement": "shifty.isFavoriteColorTheme"
      },
      {
        "command": "shifty.ignoreColorTheme",
        "title": "Ignore color theme",
        "category": "shifty"
      },
      {
        "command": "shifty.favoriteFontFamily",
        "title": "Favorite font family",
        "category": "shifty",
        "enablement": "!shifty.isFavoriteFontFamily"
      },
      {
        "command": "shifty.unfavoriteFontFamily",
        "title": "Unfavorite font family",
        "category": "shifty",
        "enablement": "shifty.isFavoriteFontFamily"
      },
      {
        "command": "shifty.ignoreFontFamily",
        "title": "Ignore font family",
        "category": "shifty"
      },
      {
        "command": "shifty.startShiftInterval",
        "title": "Start shift interval",
        "category": "shifty",
        "enablement": "!shifty.isShiftIntervalRunning"
      },
      {
        "command": "shifty.pauseShiftInterval",
        "title": "Pause shift interval",
        "category": "shifty",
        "enablement": "shifty.isShiftIntervalRunning"
      },
      {
        "command": "shifty.restartShiftInterval",
        "title": "Restart shift interval",
        "category": "shifty",
        "enablement": "shifty.isShiftIntervalRunning"
      },
      {
        "command": "shifty.showStatus",
        "title": "Show status",
        "category": "shifty"
      }
    ]
  },
  "lint-staged": {
    "*.{js,ts}": "eslint"
  },
  "prettier": {
    "useTabs": false,
    "trailingComma": "all",
    "singleQuote": false,
    "bracketSpacing": true
  },
  "dependencies": {
    "multicast-dns": "7.2.5",
    "node-fetch": "2.x",
    "node-ipc": "9.1.4",
    "node-monospace-fonts": "0.0.3",
    "shortid": "2.2.16"
  },
  "devDependencies": {
    "@types/glob": "7.1.3",
    "@types/mocha": "8.2.1",
    "@types/node": "14.14.34",
    "@types/node-fetch": "2.6.2",
    "@types/node-ipc": "9.1.3",
    "@types/shortid": "0.0.29",
    "@types/sinon": "9.0.11",
    "@types/vscode": "1.69.0",
    "@typescript-eslint/eslint-plugin": "5.30.5",
    "@typescript-eslint/parser": "5.30.5",
    "@vscode/test-electron": "2.1.5",
    "c8": "7.11.3",
    "copy-webpack-plugin": "8.1.0",
    "eslint": "8.19.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-xo": "0.41.0",
    "eslint-config-xo-typescript": "0.51.1",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-n": "15.2.4",
    "eslint-plugin-no-use-extend-native": "0.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.0.0",
    "eslint-plugin-unicorn": "43.0.1",
    "expect": "26.6.2",
    "glob": "7.1.6",
    "husky": "5.1.3",
    "lint-staged": "10.5.4",
    "mocha": "8.3.2",
    "nyc": "15.1.0",
    "patch-package": "6.4.7",
    "prettier": "2.7.1",
    "sinon": "9.2.4",
    "ts-loader": "8.0.18",
    "typescript": "4.2.3",
    "vsce": "1.87.0",
    "vscode-test": "1.5.1",
    "wait-for-expect": "3.0.2",
    "webpack": "5.25.1",
    "webpack-cli": "4.5.0",
    "xo": "0.50.0"
  },
  "scripts": {
    "compile": "webpack",
    "format": "prettier \"**/*.{js,ts}\" --write",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint",
    "postinstall": "patch-package && husky install",
    "test": "yarn test-compile && node ./out/test/run-tests.js",
    "test-compile": "rm -rf ./out && yarn compile && tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "watch": "webpack --watch",
    "vscode:prepublish": "yarn package"
  },
  "__metadata": {
    "id": "2cabb25d-aa9a-4073-8592-ce3668f833b2",
    "publisherDisplayName": "Brent Mealhouse",
    "publisherId": "9eab3f07-d10e-4851-bcc6-44429f0862af",
    "isPreReleaseVersion": false
  }
}
