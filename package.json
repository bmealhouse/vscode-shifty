{
  "name": "shifty",
  "displayName": "shifty",
  "description": "Keeps your day interesting by randomly shifting your color theme and/or font family",
  "version": "0.1.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bmealhouse/vscode-shifty"
  },
  "bugs": {
    "url": "https://github.com/bmealhouse/vscode-shifty/issues"
  },
  "author": "",
  "publisher": "bmealhouse",
  "engines": {
    "vscode": "^0.10.2"
  },
  "categories": [],
  "activationEvents": [
    "*"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "shifty",
      "properties": {
        "shifty.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Determines if shifty is enabled."
        },
        "shifty.favoritesEnabled": {
          "type": "boolean",
          "default": false,
          "description": "Determines if shifty should cycle through favorite color themes and font families."
        },
        "shifty.colorThemes.favoriteColorThemes": {
          "type": "array",
          "default": [],
          "description": "Favorite color themes."
        },
        "shifty.colorThemes.ignoreColorThemes": {
          "type": "array",
          "default": [],
          "description": "Color themes to ignore."
        },
        "shifty.colorThemes.ignoreDarkColorThemes": {
          "type": "boolean",
          "default": false,
          "description": "Determines if dark color themes should be ignored."
        },
        "shifty.colorThemes.ignoreHighContrastColorThemes": {
          "type": "boolean",
          "default": true,
          "description": "Determines if high contrast color themes should be ignored."
        },
        "shifty.colorThemes.ignoreLightColorThemes": {
          "type": "boolean",
          "default": true,
          "description": "Determines if light color themes should be ignored."
        },
        "shifty.fontFamilies.favoriteFontFamilies": {
          "type": "array",
          "default": [],
          "description": "Favorite font families."
        },
        "shifty.fontFamilies.ignoreCodefaceFontFamilies": {
          "type": "boolean",
          "default": false,
          "description": "Determines if codeface font families should be ignored."
        },
        "shifty.fontFamilies.ignoreFontFamilies": {
          "type": "array",
          "default": [],
          "description": "Font families to ignore."
        },
        "shifty.fontFamilies.ignoreMacosFontFamilies": {
          "type": "boolean",
          "default": false,
          "description": "Determines if macOS font families should be ignored."
        },
        "shifty.fontFamilies.ignoreWindowsFontFamilies": {
          "type": "boolean",
          "default": true,
          "description": "Determines if Windows font families should be ignored."
        },
        "shifty.fontFamilies.includeFontFamilies": {
          "type": "array",
          "default": [],
          "description": "Includes font families."
        },
        "shifty.shiftInterval.shiftColorThemeIntervalMs": {
          "type": "number",
          "default": 1800000,
          "description": "Number of milliseconds to wait before shifting the color theme. (defaults to 30min, use zero to disable color theme shift interval)"
        },
        "shifty.shiftInterval.shiftFontFamilyIntervalMs": {
          "type": "number",
          "default": 1800000,
          "description": "Number of milliseconds to wait before shifting the font family. (defaults to 30min, use zero to disable font family shift interval)"
        },
        "shifty.startup.shiftColorThemeOnStartup": {
          "type": "boolean",
          "default": false,
          "description": "Determines if the color theme shifts when VS Code starts up."
        },
        "shifty.startup.shiftFontFamilyOnStartup": {
          "type": "boolean",
          "default": false,
          "description": "Determines if the font family shifts when VS Code starts up."
        }
      }
    },
    "commands": [
      {
        "command": "shifty.shiftAll",
        "title": "Shift color theme & font family",
        "category": "Shifty"
      },
      {
        "command": "shifty.shiftColorTheme",
        "title": "Shift color theme",
        "category": "Shifty"
      },
      {
        "command": "shifty.shiftFontFamily",
        "title": "Shift font family",
        "category": "Shifty"
      },
      {
        "command": "shifty.startShiftInterval",
        "title": "Start shift interval",
        "category": "Shifty"
      },
      {
        "command": "shifty.stopShiftInterval",
        "title": "Stop shift interval",
        "category": "Shifty"
      },
      {
        "command": "shifty.favoriteCurrentColorTheme",
        "title": "Add current color theme to favorites",
        "category": "Shifty"
      },
      {
        "command": "shifty.favoriteCurrentFontFamily",
        "title": "Add current font family to favorites",
        "category": "Shifty"
      },
      {
        "command": "shifty.ignoreCurrentColorTheme",
        "title": "Ignore current color theme",
        "category": "Shifty"
      },
      {
        "command": "shifty.ignoreCurrentFontFamily",
        "title": "Ignore current font family",
        "category": "Shifty"
      },
      {
        "command": "shifty.showCurrentStatus",
        "title": "Show current status",
        "category": "Shifty"
      }
    ]
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test",
    "vscode:prepublish": "webpack --mode production",
    "wp": "webpack --mode development",
    "wp-dev": "webpack --mode development --watch"
  },
  "prettier": {
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false
  },
  "xo": {
    "envs": [
      "mocha"
    ],
    "prettier": true,
    "plugins": [
      "filenames"
    ],
    "parser": "babel-eslint",
    "rules": {
      "capitalized-comments": "off",
      "no-unused-vars": [
        "error",
        {
          "ignoreRestSiblings": true,
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ],
      "filenames/match-exported": [
        "error",
        "kebab",
        "^__"
      ]
    },
    "settings": {
      "import/core-modules": [
        "vscode"
      ]
    }
  },
  "devDependencies": {
    "@babel/core": "7.4.3",
    "@babel/preset-env": "7.4.3",
    "babel-eslint": "10.0.1",
    "babel-loader": "8.0.5",
    "eslint": "5.16.0",
    "eslint-plugin-filenames": "1.3.2",
    "sinon": "7.3.1",
    "vsce": "1.59.0",
    "vscode": "1.1.33",
    "webpack": "4.29.6",
    "webpack-cli": "3.3.0",
    "xo": "0.24.0"
  }
}
