{
  "name": "shifty",
  "displayName": "shifty",
  "description": "Shifts your color theme & font family every 30min",
  "version": "0.7.6-local-0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bmealhouse/vscode-shifty"
  },
  "bugs": {
    "url": "https://github.com/bmealhouse/vscode-shifty/issues"
  },
  "author": "Brent Mealhouse <bmealhouse@gmail.com>",
  "publisher": "bmealhouse",
  "engines": {
    "vscode": "^1.31.0"
  },
  "categories": [
    "Themes",
    "Other"
  ],
  "keywords": [
    "shift",
    "random",
    "theme",
    "font",
    "pomodoro"
  ],
  "icon": "images/shifty-logo.png",
  "galleryBanner": {
    "color": "#193549",
    "theme": "dark"
  },
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "shifty",
      "properties": {
        "shifty.shiftMode": {
          "type": "string",
          "default": "default",
          "description": "Controls how shifty cycles through color themes & font families.",
          "enum": [
            "default",
            "discovery",
            "favorites"
          ],
          "enumDescriptions": [
            "Cycles through all color themes & font families that have not been ignored.",
            "Cycles through color themes & font families that have not been favorited or ignored.",
            "Cycles through favorite color themes & font families."
          ]
        },
        "shifty.colorThemes.favoriteColorThemes": {
          "type": "array",
          "default": [],
          "description": "List color themes you've favorited."
        },
        "shifty.colorThemes.ignoreColorThemes": {
          "type": "array",
          "default": [],
          "description": "List of color themes you've ignored."
        },
        "shifty.colorThemes.ignoreDarkColorThemes": {
          "type": "boolean",
          "default": false,
          "description": "Controls whether dark color themes are ignored."
        },
        "shifty.colorThemes.ignoreHighContrastColorThemes": {
          "type": "boolean",
          "default": false,
          "description": "Controls whether high contrast color themes are ignored."
        },
        "shifty.colorThemes.ignoreLightColorThemes": {
          "type": "boolean",
          "default": false,
          "description": "Controls whether light color themes are ignored."
        },
        "shifty.fontFamilies.fallbackFontFamily": {
          "type": [
            "string",
            "null"
          ],
          "default": "monospace",
          "markdownDescription": "Controls which font family will be used as the fallback. Supports comma delimited values (e.g. `\"SF Mono\", monospace`)."
        },
        "shifty.fontFamilies.favoriteFontFamilies": {
          "type": "array",
          "default": [],
          "description": "List of font families you've favorited."
        },
        "shifty.fontFamilies.ignoreCodefaceFontFamilies": {
          "type": "boolean",
          "default": false,
          "description": "Controls whether Codeface font families are ignored."
        },
        "shifty.fontFamilies.ignoreFontFamilies": {
          "type": "array",
          "default": [],
          "description": "List of font families you've ignored."
        },
        "shifty.fontFamilies.includeFontFamilies": {
          "type": "array",
          "default": [],
          "description": "List of font families to include. Useful for including fonts you've purchased."
        },
        "shifty.shiftIntervalDelayMin": {
          "type": [
            "integer",
            "null"
          ],
          "default": 30,
          "markdownDescription": "Number of minutes to wait before shifting the color theme & font family. Use `0` or `null` to disable the shift interval."
        }
      }
    },
    "commands": [
      {
        "command": "shifty.shiftColorTheme",
        "title": "Shift color theme",
        "category": "shifty"
      },
      {
        "command": "shifty.shiftFontFamily",
        "title": "Shift font family",
        "category": "shifty"
      },
      {
        "command": "shifty.shiftBoth",
        "title": "Shift color theme & font family",
        "category": "shifty"
      },
      {
        "command": "shifty.favoriteColorTheme",
        "title": "Favorite color theme",
        "category": "shifty"
      },
      {
        "command": "shifty.favoriteFontFamily",
        "title": "Favorite font family",
        "category": "shifty"
      },
      {
        "command": "shifty.favoriteBoth",
        "title": "Favorite color theme & font family",
        "category": "shifty"
      },
      {
        "command": "shifty.ignoreColorTheme",
        "title": "Ignore color theme",
        "category": "shifty"
      },
      {
        "command": "shifty.ignoreFontFamily",
        "title": "Ignore font family",
        "category": "shifty"
      },
      {
        "command": "shifty.ignoreBoth",
        "title": "Ignore color theme & font family",
        "category": "shifty"
      },
      {
        "command": "shifty.playShiftInterval",
        "title": "Play shift interval",
        "category": "shifty"
      },
      {
        "command": "shifty.pauseShiftInterval",
        "title": "Pause shift interval",
        "category": "shifty"
      },
      {
        "command": "shifty.showStatus",
        "title": "Show status",
        "category": "shifty"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "format": "prettier \"**/*.{js,ts}\" --write",
    "package": "yarn compile && vsce package",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "yarn compile && node ./node_modules/vscode/bin/test",
    "vscode:prepublish": "yarn compile"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "xo",
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false
  },
  "xo": {
    "envs": [
      "mocha"
    ],
    "prettier": true,
    "plugins": [
      "filenames"
    ],
    "extends": "xo-typescript",
    "extensions": [
      "ts"
    ],
    "settings": {
      "import/core-modules": [
        "vscode"
      ]
    },
    "rules": {
      "unicorn/no-abusive-eslint-disable": "off",
      "capitalized-comments": "off",
      "no-unused-vars": [
        "error",
        {
          "ignoreRestSiblings": true,
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ],
      "@typescript-eslint/indent": [
        "error",
        2
      ],
      "filenames/match-exported": [
        "error",
        "kebab",
        "^__"
      ]
    }
  },
  "devDependencies": {
    "@types/mocha": "5.2.6",
    "@types/node": "12.0.2",
    "@types/sinon": "7.0.11",
    "@typescript-eslint/eslint-plugin": "1.9.0",
    "babel-eslint": "10.0.1",
    "eslint": "5.16.0",
    "eslint-config-xo-typescript": "0.12.0",
    "eslint-plugin-filenames": "1.3.2",
    "husky": "2.3.0",
    "lint-staged": "8.1.7",
    "sinon": "7.3.2",
    "typescript": "3.4.5",
    "vsce": "1.61.0",
    "vscode": "1.1.34",
    "xo": "0.24.0"
  },
  "dependencies": {
    "node-ipc": "9.1.1",
    "shortid": "2.2.14"
  }
}
