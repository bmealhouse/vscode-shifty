{
  "name": "shifty",
  "displayName": "shifty",
  "description": "Shifts your color theme & font family every 30min",
  "version": "0.6.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bmealhouse/vscode-shifty"
  },
  "bugs": {
    "url": "https://github.com/bmealhouse/vscode-shifty/issues"
  },
  "author": "Brent Mealhouse <bmealhouse@gmail.com>",
  "publisher": "bmealhouse",
  "engines": {
    "vscode": "^1.0.0"
  },
  "categories": [
    "Themes",
    "Other"
  ],
  "keywords": [
    "shift",
    "random",
    "theme",
    "font",
    "pomodoro"
  ],
  "icon": "images/shifty-logo.png",
  "galleryBanner": {
    "color": "#193549",
    "theme": "dark"
  },
  "activationEvents": [
    "*"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "shifty",
      "properties": {
        "shifty.shiftMode": {
          "type": "string",
          "default": "default",
          "description": "Controls how shifty cycles through color themes & font families.",
          "enum": [
            "default",
            "discovery",
            "favorites"
          ],
          "enumDescriptions": [
            "Cycles through all color themes & font families that have not been ignored.",
            "Cycles through color themes & font families that have not been favorited or ignored.",
            "Cycles through favorite color themes & font families."
          ]
        },
        "shifty.colorThemes.favoriteColorThemes": {
          "type": "array",
          "default": [],
          "description": "List color themes you've favorited."
        },
        "shifty.colorThemes.ignoreColorThemes": {
          "type": "array",
          "default": [],
          "description": "List of color themes you've ignored."
        },
        "shifty.colorThemes.ignoreDarkColorThemes": {
          "type": "boolean",
          "default": false,
          "description": "Controls whether dark color themes are ignored."
        },
        "shifty.colorThemes.ignoreHighContrastColorThemes": {
          "type": "boolean",
          "default": false,
          "description": "Controls whether high contrast color themes are ignored."
        },
        "shifty.colorThemes.ignoreLightColorThemes": {
          "type": "boolean",
          "default": false,
          "description": "Controls whether light color themes are ignored."
        },
        "shifty.fontFamilies.fallbackFontFamily": {
          "type": [
            "string",
            "null"
          ],
          "default": "monospace",
          "description": "Fallback font family. This is useful when a font is not supported inside the integrated terminal."
        },
        "shifty.fontFamilies.favoriteFontFamilies": {
          "type": "array",
          "default": [],
          "description": "Favorite font families."
        },
        "shifty.fontFamilies.ignoreCodefaceFontFamilies": {
          "type": "boolean",
          "default": false,
          "description": "Determines if codeface font families should be ignored."
        },
        "shifty.fontFamilies.ignoreFontFamilies": {
          "type": "array",
          "default": [],
          "description": "Font families to ignore."
        },
        "shifty.fontFamilies.includeFontFamilies": {
          "type": "array",
          "default": [],
          "description": "Includes font families."
        },
        "shifty.shiftInterval.shiftColorThemeIntervalMs": {
          "type": [
            "number",
            "null"
          ],
          "default": 1800000,
          "description": "Number of milliseconds to wait before shifting the color theme. (defaults to 30min, use zero or null to disable color theme shift interval)"
        },
        "shifty.shiftInterval.shiftFontFamilyIntervalMs": {
          "type": [
            "number",
            "null"
          ],
          "default": 1800000,
          "description": "Number of milliseconds to wait before shifting the font family. (defaults to 30min, use zero or null to disable font family shift interval)"
        },
        "shifty.startup.shiftColorThemeOnStartup": {
          "type": "boolean",
          "default": false,
          "description": "Determines if the color theme shifts when VS Code starts up."
        },
        "shifty.startup.shiftFontFamilyOnStartup": {
          "type": "boolean",
          "default": false,
          "description": "Determines if the font family shifts when VS Code starts up."
        }
      }
    },
    "commands": [
      {
        "command": "shifty.shiftColorTheme",
        "title": "Shift color theme",
        "category": "shifty"
      },
      {
        "command": "shifty.shiftFontFamily",
        "title": "Shift font family",
        "category": "shifty"
      },
      {
        "command": "shifty.shiftBoth",
        "title": "Shift color theme & font family",
        "category": "shifty"
      },
      {
        "command": "shifty.favoriteColorTheme",
        "title": "Favorite color theme",
        "category": "shifty"
      },
      {
        "command": "shifty.favoriteFontFamily",
        "title": "Favorite font family",
        "category": "shifty"
      },
      {
        "command": "shifty.favoriteBoth",
        "title": "Favorite color theme & font family",
        "category": "shifty"
      },
      {
        "command": "shifty.ignoreColorTheme",
        "title": "Ignore color theme",
        "category": "shifty"
      },
      {
        "command": "shifty.ignoreFontFamily",
        "title": "Ignore font family",
        "category": "shifty"
      },
      {
        "command": "shifty.ignoreBoth",
        "title": "Ignore color theme & font family",
        "category": "shifty"
      },
      {
        "command": "shifty.startShiftInterval",
        "title": "Start shift interval",
        "category": "shifty"
      },
      {
        "command": "shifty.stopShiftInterval",
        "title": "Stop shift interval",
        "category": "shifty"
      },
      {
        "command": "shifty.showStatus",
        "title": "Show status",
        "category": "shifty"
      }
    ]
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "xo",
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false
  },
  "xo": {
    "envs": [
      "mocha"
    ],
    "prettier": true,
    "plugins": [
      "filenames"
    ],
    "parser": "babel-eslint",
    "rules": {
      "capitalized-comments": "off",
      "no-unused-vars": [
        "error",
        {
          "ignoreRestSiblings": true,
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ],
      "filenames/match-exported": [
        "error",
        "kebab",
        "^__"
      ]
    },
    "settings": {
      "import/core-modules": [
        "vscode"
      ]
    }
  },
  "devDependencies": {
    "babel-eslint": "10.0.1",
    "eslint": "5.16.0",
    "eslint-plugin-filenames": "1.3.2",
    "husky": "2.2.0",
    "lint-staged": "8.1.6",
    "sinon": "7.3.2",
    "vsce": "1.61.0",
    "vscode": "1.1.33",
    "xo": "0.24.0"
  }
}
